		<script>
			//counter to track rows in order
			let counter = 1;


			// Add field to add sales record
			const addorderhistory = () => {
				// alert("clicked");
				counter+=1;
				const nodeToAddTo = document.getElementById("nextone");
				nodeToAddTo.insertAdjacentHTML(
					"afterend",
					`
					<div class="form-group id-${counter}" id="nextone">
									<div>
										<label for="inputState">Items</label>
										<select
											id="select-${counter}"
											class="form-control"
											style="width: fit-content !important"
											onchange="selecFunc('select-${counter}')"
											required
										>
										<option >Select One</option>
										<% for (let i=0; i<branchMenu.length; i++) { %>
											<option value="<%= branchMenu[i].item_id + ',' + branchMenu[i].item_price  %>"><%=branchMenu[i].item_name + " (" + branchMenu[i].item_size +")"%></option>
										<% } %>
									</select>
									</div>
									
									<div>
										<label for="unit-price">Unit Price:</label>
										<button class="btn btn-light disabled" style="display:block" id="price-${counter}">$ </button>
									</div>

									<div>
										<label for="quantity">Quantity</label>
										<input
											type="number"
											class="form-control"
											id="quantity-${counter}"
											value="1"
											required
										/>
									</div>
								</div>
                    `
				);
				nodeToAddTo.id = "";
			};

			const selecFunc = (selectID) => {
				console.log(selectID);
				const selectElement = document.getElementById(selectID);
				const index = selectID[selectID.length - 1];
				const priceElement = document.getElementById("price-"+index);
				priceElement.innerText = `$ ${selectElement.value.split(",")[1]}`
			}

			const calculateTotal = () => {
				let total = 0;
				for (let i = 1; i < counter+1; i++){
					const price = document.getElementById("price-"+i).innerText;
					const quantity = document.getElementById("quantity-"+i).value;
					total += price.split(" ")[1] * quantity;
				}
				document.getElementById("total").innerText = `Total: $ ${total}`
			}

			const handleSubmission = (e) => {
				if (document.getElementById("total").innerText == "Total: $"){
					alert("You need to calculate total first");
					
					return false;
				}
				const toSend = {};
				const order = {}
				for (let i = 1; i < counter+1; i++){
					const itemId = document.getElementById(`select-${i}`).value.split(",")[0];
					const quantity = parseFloat(document.getElementById("quantity-"+i).value);
					// toSend.push([itemId, quantity]);
					if(order[itemId]){
						order[itemId]+=quantity
					}
					else{
						order[itemId]=quantity
					}
				}
				const custId = document.getElementById("customer-id").value;
				toSend["customer_id"] = custId
				toSend["order"] = order

				fetch(`/api/order`, {
					method: "POST",
					headers: {'Content-Type': 'application/json'},
					body: JSON.stringify(toSend)
				})
					.then(function (response) {
						// The API call was successful!
						if (response.ok) {
							window.location.reload();
							return response.json();
						} else {
							return Promise.reject(response);
						}
					})
					.then(function (data) {

						// This is the JSON from our response
					})
					.catch(function (err) {
						// There was an error
						console.warn("Something went wrong.", err);
					});
			

				console.log(toSend)

				

			}

			
		</script>

