				<main class="col-md-9 ml-sm-auto col-lg-10 px-md-4 py-4">
					<h1>Add order</h1>
					<% if (orderSuccess) { %>
						<div class="alert alert-success" role="alert">
							<%= orderSuccess %>
						</div>
						<% } %>

					<div class="card" style="width: 50%">
						<div class="card-body">
							<form>
								<div class="form-group">
									<div>
										<label for="Customer Id">Customer ID</label>
										<input
											type="number"
											class="form-control"
											name="customer-id"
											id="customer-id"
											placeholder="Enter customer id"
											required
										/>
									</div>

									<div>
										Add row:
										<i
											class="bi bi-plus-circle fa-2x"
											onclick="addorderhistory()"
											style="margin: 20px"
										></i>
									</div>
								</div>
								<div class="form-group" id="nextone">
									<div>
										<label for="inputState">Items</label>
										<select
											id="select-1"
											class="form-control"
											style="width: fit-content !important"
											onchange="selecFunc('select-1')"
										>
										<option >Select One</option>

										<% for (let i=0; i<branchMenu.length; i++) { %>
											<option value="<%= branchMenu[i].item_id + ',' + branchMenu[i].item_price  %>"><%=branchMenu[i].item_name + " (" + branchMenu[i].item_size +")"%></option>
										<% } %>
									</select>
									</div>
									
									<div>
										<label for="unit-price">Unit Price:</label>
										<button class="btn btn-light disabled" style="display:block" id="price-1">$</button>
									</div>

									<div>
										<label for="quantity">Quantity</label>
										<input
											type="number"
											class="form-control"
											id="quantity-1"
											value="1"
											required
										/>
									</div>
								</div>
								
								<div class="form-group" >
									<span class="badge badge-secondary" onclick="calculateTotal()">Calculate Total</span>
									<div style="margin-right: 50px;" id="total">Total: $ </div></div>
								<div class="form-group" >
									<div></div>
									<button class="btn btn-success" onclick="handleSubmission()">Place Order</button>
								</div>
							</form>
						</div>
					</div>
